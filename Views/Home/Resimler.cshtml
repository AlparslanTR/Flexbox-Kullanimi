
@{
    ViewBag.Title = "Resimler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <style>
        *
        {
            box-sizing:border-box;
        }
        .header
        {
            text-align:center;
            padding:40px;
        }
        .row
        {
            display:flex;
            flex-wrap:wrap;
            padding:0 5px;
        }
        .flex
        {
            flex:25%;
            max-width:25%;
            padding:0 5px;
        }
        .flex img
        {
            margin-top:6px;
            vertical-align:middle;
            width:100%;
        }
        @@media screen and (max-width:800px)
        {
            .flex
            {
                flex:50%;
                max-width:100%;
            }
        }
        @@media screen and (max-width:600px) {
            .flex {
                flex: 100%;
                max-width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Flexbox İle Resimler</h1>
        <p>Flexbox Öğreniyorum</p>
    </div>
    <div class="row">
        <div class="flex">
            <img src="~/Images/1060-536x354-blur_2.jpg" />
            <img src="~/Images/1084-536x354-grayscale.jpg" />
            <img src="~/Images/237-536x354.jpg" />
            <img src="~/Images/395-536x354.jpg" />
        </div>
        <div class="flex">
            <img src="~/Images/585-536x354.jpg" />
            <img src="~/Images/635-536x354.jpg" />
            <img src="~/Images/705-536x354.jpg" />
            <img src="~/Images/866-536x354.jpg" />
        </div>
        <div class="flex">
            <img src="~/Images/870-536x354-blur_2-grayscale.jpg" />
            <img src="~/Images/881-536x354.jpg" />
            <img src="~/Images/1018-536x354.jpg" />
            <img src="~/Images/924-536x354.jpg" />
        </div>
        <div class="flex">
            <img src="~/Images/842-536x354.jpg" />
            <img src="~/Images/694-536x354.jpg" />
            <img src="~/Images/640-536x354.jpg" />
            <img src="~/Images/130-536x354.jpg" />
        </div>
    </div>
</body>
</html>

